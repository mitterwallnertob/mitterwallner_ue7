<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.Controller">

    <HBox>
    <TextField fx:id="tfinput" minHeight="43.0" prefHeight="43.0" prefWidth="400.0" />

    </HBox>
    <GridPane fx:id="gpmain" layoutX="100" layoutY="100">

        <ListView fx:id="lvstack" prefHeight="200.0" prefWidth="150.0" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.rowSpan="5" />


        <Button fx:id="bt1" minHeight="50" minWidth="50" onAction="#btnronact" text="1" GridPane.columnIndex="1" GridPane.rowIndex="0" />
        <Button fx:id="bt2" minHeight="50" minWidth="50" onAction="#btnronact" text="2" GridPane.columnIndex="2" GridPane.rowIndex="0" />
        <Button fx:id="bt3" minHeight="50" minWidth="50" onAction="#btnronact" text="3" GridPane.columnIndex="3" GridPane.rowIndex="0" />
        <Button fx:id="bt4" minHeight="50" minWidth="50" onAction="#btnronact" text="4" GridPane.columnIndex="1" GridPane.rowIndex="1" />
        <Button fx:id="bt5" minHeight="50" minWidth="50" onAction="#btnronact" text="5" GridPane.columnIndex="2" GridPane.rowIndex="1" />
        <Button fx:id="bt6" minHeight="50" minWidth="50" onAction="#btnronact" text="6" GridPane.columnIndex="3" GridPane.rowIndex="1" />
        <Button fx:id="bt7" minHeight="50" minWidth="50" onAction="#btnronact" text="7" GridPane.columnIndex="1" GridPane.rowIndex="2" />
        <Button fx:id="bt8" minHeight="50" minWidth="50" onAction="#btnronact" text="8" GridPane.columnIndex="2" GridPane.rowIndex="2" />
        <Button fx:id="bt9" minHeight="50" minWidth="50" onAction="#btnronact" text="9" GridPane.columnIndex="3" GridPane.rowIndex="2" />
        <Button fx:id="bt0" minHeight="50" minWidth="50" onAction="#btnronact" text="0" GridPane.columnIndex="1" GridPane.rowIndex="3" />
        <Button fx:id="btpunkt" minHeight="50" minWidth="50" onAction="#btnronact" text="." GridPane.columnIndex="2" GridPane.rowIndex="3" />

        <Button fx:id="btplus" minHeight="50" minWidth="50" onAction="#btfunconact" text="+" GridPane.columnIndex="4" GridPane.rowIndex="0" />
        <Button fx:id="btminus" minHeight="50" minWidth="50" onAction="#btfunconact" text="-" GridPane.columnIndex="4" GridPane.rowIndex="1" />
        <Button fx:id="btmal" minHeight="50" minWidth="50" onAction="#btfunconact" text="*" GridPane.columnIndex="5" />
        <Button fx:id="btdiv" minHeight="50" minWidth="50" onAction="#btfunconact" text="/" GridPane.columnIndex="5" GridPane.rowIndex="1" />
        <Button fx:id="btenter" defaultButton="true" minHeight="50" minWidth="50" onAction="#btfunconact" prefHeight="50.0" prefWidth="100.0" text="enter" GridPane.columnIndex="4" GridPane.columnSpan="2" GridPane.rowIndex="2" />
      <columnConstraints>
         <ColumnConstraints />
         <ColumnConstraints />
         <ColumnConstraints />
         <ColumnConstraints />
         <ColumnConstraints />
         <ColumnConstraints />
      </columnConstraints>
      <rowConstraints>
         <RowConstraints />
         <RowConstraints />
         <RowConstraints />
         <RowConstraints />
         <RowConstraints />
      </rowConstraints>

    </GridPane>
    <HBox>
        <TextField fx:id="tfmes" editable="false" prefHeight="6.0" prefWidth="400.0" />
    </HBox>
</VBox>
